<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glNE1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:paddingTop="25dp"
    android:rowCount="8"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/etNEEventName"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="0"
	    android:inputType="text"
	    style="@style/MyUserManual"
        android:textStyle="normal"
        android:hint="@string/eventString" />

    <View
        android:id="@+id/viewNE1"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="1" />

    <TextView
        android:id="@+id/txtNEBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="25dip"
        android:layout_row="2"
        style="@style/MyUserManual"
        android:textStyle="normal"
        android:text="@string/budget"
         />

    <EditText
        android:id="@+id/etNEBudget"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_marginLeft="5dip"
        android:layout_row="2"
        style="@style/MyUserManual"
        android:textStyle="normal"
        android:inputType="numberDecimal" 
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/txtNEParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dip"
        android:layout_row="3"
        android:text="@string/addPart"
        style="@style/MyUserManual"
        android:textStyle="normal" />
    
    <Button
        android:id="@+id/btnNESearch"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_column="1"
        android:layout_marginLeft="25dip"
        android:layout_marginTop="20dp"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:text="@string/findPart"
        style="@style/MyUserManual"
        android:textStyle="normal" 
        android:textSize="@dimen/buttonTextSize"
        />
    
     <View
        android:id="@+id/viewNE2"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="4" />
    
     <ListView
         android:id="@+id/lvNEparticipants"
         android:layout_width="298dp"
         android:layout_height="271dp"
         android:layout_column="0"
         android:layout_columnSpan="2"
         android:layout_marginLeft="25dip"
         android:layout_row="5" >
        </ListView>
        
</GridLayout>