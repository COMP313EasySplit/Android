<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="5dp"
    >
    
    <TextView
        android:id="@+id/txtIPDTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant Information : " 
        android:layout_margin="15dip"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    
    <TextView
        android:id="@+id/txtIPDFName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name : " />
    <EditText
        android:id="@+id/etIPDFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip" 
        android:inputType="text"
        >
        <requestFocus />
     </EditText>

    <TextView
        android:id="@+id/txtIPDLName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name : " />
    <EditText
        android:id="@+id/etIPDLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip" 
        android:inputType="text"
        >
         <requestFocus />
     </EditText>
    
    <TextView
        android:id="@+id/txtIPDEMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : " />
    <EditText
        android:id="@+id/etIPDEMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip" 
        android:inputType="textEmailAddress"
        > 
         <requestFocus />
     </EditText>
    
    
</LinearLayout>
