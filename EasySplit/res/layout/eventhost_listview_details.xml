<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/llELVD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <TextView
            android:id="@+id/txtELVDEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eventNameLV"
            android:textColor="#000000"
            android:textSize="@dimen/listViewSize" />

        <TextView
            android:id="@+id/txtELVDStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statusLV"
            android:textColor="#000000"
            android:textSize="@dimen/formSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtELVDAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/amountLV"
        android:textColor="#000000"
        android:textSize="@dimen/listViewSize" />

    <ImageButton
        android:id="@+id/imgbtnELVDAddNewExpense"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/txtELVDAmount"
        android:layout_below="@+id/txtELVDAmount"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/addNewExp"
        android:src="@drawable/ic_action_new_dark" />

</RelativeLayout>