<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal" >
        </LinearLayout>
        
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtAIName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="@string/RAName"
            android:textSize="@dimen/formSize" />
        
        <TextView
            android:id="@+id/etAIName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:ems="10"
            android:textSize="@dimen/formSize" 
             android:text="null"
            />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0.35"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtAIEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:text="@string/RAEmail"
            android:textSize="@dimen/formSize" />

        <TextView
            android:id="@+id/etAIEmail"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:textSize="@dimen/formSize" 
             android:text="null"
            />


    </LinearLayout>
    
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_weight="0.35"
          android:orientation="horizontal" >

          <TextView
              android:id="@+id/txtAINotification"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="25dip"
              android:text="@string/notepref"
              android:textSize="@dimen/formSize" />

          <TextView
              android:id="@+id/etAINotification"
              android:layout_width="184dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dip"
              android:textSize="@dimen/formSize"
              android:text="null"/>
      </LinearLayout>

       <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_weight="0.35"
          android:orientation="horizontal" >

     <TextView
              android:id="@+id/txtAIDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="25dip"
              android:text="@string/accreationdate"
              android:textSize="@dimen/formSize" />

          <TextView
              android:id="@+id/etAIDate"
              android:layout_width="184dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dip"
              android:textSize="@dimen/formSize" 
              android:text="null"             
              />

</LinearLayout>
</LinearLayout>