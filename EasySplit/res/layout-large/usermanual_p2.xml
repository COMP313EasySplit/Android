<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1"
        android:textSize="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        style="@style/MyUserManual_large"
        android:id="@+id/step1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="249dp"
            android:layout_height="210dp"
            android:src="@drawable/step1" />

        </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
        
    <TextView
        android:id="@+id/step1des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyUserManual"
        android:textSize="30sp"
        android:text="Look for the '+' to \ncreate a new event"
         />
    
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:orientation="vertical" >
    
   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="258dp"
            android:layout_height="205dp"
            android:src="@drawable/step2" />
        
        </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
        
    <TextView
        android:id="@+id/step1des21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyUserManual"
        android:textSize="30sp"
        android:text="Select the checkmark \nto save"
         />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>