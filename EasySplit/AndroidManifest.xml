<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easysplit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.easysplit.mainview.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.easysplit.mainview.NewEvent"
            android:label="@string/title_activity_new_event" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.ViewEvent"
            android:label="@string/title_activity_view_event" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.NewExpense"
            android:label="@string/title_activity_new_expense" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.ViewExpense"
            android:label="@string/title_activity_view_expense" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.EditExpense"
            android:label="@string/title_activity_edit_expense" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.RegisterAccount"
            android:label="@string/title_activity_register_account" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.AccountInfo"
            android:label="@string/title_activity_account_info" >
        </activity>
        <activity
            android:name="com.easysplit.mainview.UserLogin"
            android:label="@string/title_activity_user_login" >
        </activity>
    </application>

</manifest>
